{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2021",
    "sourceMap": true,
    "composite": true,
    "rootDir": "./",
    "lib": ["ES2020", "ESNext.Array"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"]
}
