{
  "name": "social-media-export-analyser",
  "version": "1.0.0",
  "description": "Svelte website to view GDPR data portability exports",
  "scripts": {
    "start": "cd client && npm run build && npm run serve",
    "test": "cd lib && npm run build && cd ../lib-testing && npm run test",
    "lint:check": "eslint . --ext .ts --ignore-pattern perf-test/*",
    "lint:fix": "eslint . --ext .ts --fix --ignore-pattern perf-test/*",
    "format:check": "prettier --check **/*.ts --ignore-path .gitignore",
    "format:write": "prettier --write **/*.ts --ignore-path .gitignore"
  },
  "keywords": [
    "gdpr",
    "data-portability",
    "data-visualisation"
  ],
  "author": "Brian Evans",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4"
  },
  "eslintIgnore": [
    "**/node_modules",
    "**/*.d.ts"
  ]
}
